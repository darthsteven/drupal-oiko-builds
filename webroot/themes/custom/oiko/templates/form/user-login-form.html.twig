{% if form.shibboleth_login_block is not empty %}
<div class="callout primary">
    <h3>{% trans %}Login using Warwick Single Sign-on{% endtrans %}</h3>
    {{ form.shibboleth_login_block }}
</div>
<h4>{% trans %}Or{% endtrans %}</h4>
<div class="callout secondary">
    <h3>Login using an {{ site_name }} account</h3>
    {{ form|without('shibboleth_login_block') }}
</div>
{% else %}
  <div class="callout primary">
    <h3>Login using a {{ site_name }} account</h3>
    {{ form }}
  </div>
{% endif %}
