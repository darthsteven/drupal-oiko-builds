<?php

/**
 * @file
 * Contains basicshib.module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function basicshib_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the basicshib module.
    case 'help.page.basicshib':
      return [
        '#theme' => 'basicshib_help',
      ];
    default:
  }
}

/**
 * Implements hook_theme().
 */
function basicshib_theme() {
  return [
    'basicshib_help' => [
      'render element' => 'children',
    ],
    'basicshib_login_link' => [
      'variables' => [
        'login_url' => '',
        'login_link_label' => '',
      ],
      'template' => 'basicshib-login-link',
    ],
  ];
}
