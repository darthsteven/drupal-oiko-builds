<div id="leaflet-sidebar" class="sidebar oiko-sidebar collapsed">
    <!-- Nav tabs -->
    <div class="sidebar-tabs">
        <ul role="tablist">
            <li><a href="#" data-pane-id="information" role="tab"><i class="fa fa-bars"></i></a></li>
            <li><a href="#" data-pane-id="discussion" role="tab"><i class="fa fa-comments"></i></a></li>
            <li><a href="#" data-pane-id="share" role="tab"><i class="fa fa-share-alt"></i></a></li>
        </ul>

        <ul role="tablist">
            <li class="active"><a href="#" data-pane-id="legend" role="tab"><i class="fa fa-map-o"></i></a></li>
