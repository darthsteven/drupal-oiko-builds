            <div class="sidebar-share-content-content"><p>Click to share </p></div>
        </div>

        <div class="sidebar-pane active" data-pane-id="legend">
            <h1 class="sidebar-header"><span class="sidebar-close"><i class="fa fa-times"></i></span> Legend</h1>

            <div class="sidebar-legend-content-content">{{ sidebar_legend }}</div>
        </div>
