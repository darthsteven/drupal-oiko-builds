<div class="contrafacta-wrapper callout contrafacta-wrapper--details-hidden" data-toggler=".contrafacta-wrapper--details-hidden" id="{{ unique_id }}">
  <div class="contrafacta-wrapper__model" >
    <a href="#" data-toggle="{{ unique_id }}" class="contrafacta-wrapper__toggler">
      <span class="show-for-sr contrafacta-wrapper__toggler-show-when-hidden">Show musical details</span>
      <i class="fa fa-plus fa-2x contrafacta-wrapper__toggler-show-when-hidden" title="Show musical details" aria-hidden="true"></i>
      <span class="show-for-sr contrafacta-wrapper__toggler-show-when-shown">Hide musical details</span>
      <i class="fa fa-minus fa-2x contrafacta-wrapper__toggler-show-when-shown" title="Hide musical details" aria-hidden="true"></i>
    </a>
    <span class="contrafacta-wrapper__model-label" title="A model is a lyric work whose melody and, most often, melodic structure have been used for composing other songs">Model</span>
    {{ model_view }}
  </div>
  <div>
    <span class="contrafacta-wrapper__contrafacta-label" title="A contrafactum is a lyric work which used the melody and possibly the melodic structure of an existing song.">{{ contrafacta_label }}</span>
    {{ contrafacta_view }}
  </div>
</div>
